@page
@model GameLibraryManager.Pages.IndexModel
@{
    ViewData["Title"] = "Game Library Manager";
}

<div class="container">
    <!-- Блок заголовка -->
    <div class="header-block text-center my-4">
        <h1 class="display-4">Game Library Manager</h1>
    </div>

    <!-- Блок кнопки "Добавить новую игру" -->
    <div class="add-game-block mb-4">
        <a href="/AddEdit" class="btn btn-success">Добавить новую игру</a>
    </div>

    <!-- Блок таблицы -->
    <div class="table-block">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Название</th>
                    <th>Жанр</th>
                    <th>Год выпуска</th>
                    <th>Разработчик</th>
                    <th>Платформа</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.Games)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>@game.Name</td>
                        <td>@game.Genre</td>
                        <td>@game.Year</td>
                        <td>@game.Developer</td>
                        <td>@game.Platform</td>
                        <td>
                            <a href="/AddEdit?id=@game.Id" class="btn btn-sm btn-warning">Редактировать</a>
                            <form method="post" asp-page-handler="Delete" style="display:inline;">
                                <input type="hidden" name="id" value="@game.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>